@{
    Layout = null;
}
@model LuoBtoC.Areas.Admin.Models.LoginModel

<!DOCTYPE html>
<html>
<head id="Head1" runat="server">
    <title>系统登陆</title>
    <link rel="stylesheet" type="text/css" href="css/Login.css" />


    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script language="javascript">
        function addMood() {
          
            $.ajax({
                type: "POST",
                url: "/Admin/LoginReset",
                data: "model=" + model,
                success: function (sesponseTest) {
                    alert(sesponseTest);
                }
            });
        }
    </script>
    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $("#btnReset").click(function () {
                $.ajax({
                    type: "POST",
                    url: "/Admin/LoginReset",
                    data: "model" + model,
                    success: function (sesponseTest) {
                        $("#txt1").val(sesponseTest);
                    }
                });
            });
        });
    </script>


</head>
<body>
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) 
    {
         @Html.AntiForgeryToken()
    
   
        <div class="logina">&nbsp;</div>
        <div align="center" class="login0">
            <table cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td>
                        <img src="images/login/login1.jpg" />
                    </td>
                    <td style="width:763px; height:51px; background:#cce3fb;border:0px">
                        <span style=" float:right;  font-family: 华文隶书; font-size:34px; margin-right:15px;color:#248fbd;">
                            B&nbsp;t&nbsp;o&nbsp;C&nbsp;后&nbsp;台&nbsp;管&nbsp;理&nbsp;系&nbsp;统
                        </span>
                    </td>

                </tr>
                <tr>
                    <td colspan="2" align="left">
                        @Html.ValidationSummary(true)
                        <table>
                            <tr>
                                <td>
                                    <img src="images/login/login2.jpg" />
                                </td>
                                <td>
                                   
                                    <table class="login1">
                                        <tr>
                                            <td class="login2">用&emsp;&emsp;户：</td>
                                            <td class="login3">
                                                @Html.TextBoxFor(m => m.UserName)
                                                @Html.ValidationMessageFor(m => m.UserName)
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="login2_1">密&emsp;&emsp;码：</td>
                                            <td class="login6">
                                                @Html.TextBoxFor(m=>m.Password)
                                                @Html.ValidationMessageFor(m=>m.Password)
                                            </td>
                                        </tr>
                                      
                                        <tr>
                                            <td class="login4">
                                                <input name="Login" id="LoginButton" value="登录" src="images/login/login3.jpg" style="height:25px;width:72px;border-width:0px;vertical-align:middle" type="image">
                                            </td>
                                            <td class="login5">
                                                <input name="btnReset" id="btnReset" type="reset" value="重置"  onclick="addMood()" style="width: 72px; height: 25px; border: 0px;cursor: pointer; background: url(images/login/login4.jpg) no-repeat;vertical-align:middle" />
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr><td>&nbsp;</td></tr>
                <tr>
                    <td colspan="3" align="center" class="login7" style="background:#cce3fb; ">
                        <span>copyright @@ 1995-2017   浙ICP备 11029140号-1</span>
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="3" class="login7">
                        <span>版权所有：瑞康科技有限公司</span>
                    </td>
                </tr>
            </table>
        </div>
  
    }

</body>
</html>
