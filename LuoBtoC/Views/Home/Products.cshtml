@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SqlModel.Home.ProductModel
<link href="../../style/style.css" rel="stylesheet" type="text/css" />
<link href="css/templatemo_style.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="css/ddsmoothmenu.css" />


<div id="content" class="float_r">
    <h4>@ViewBag.strTypeName</h4>
    @foreach (var m in Model.ProList)
    {
        <div class="product_box">
            <h3 style="text-align:center">
                @Collections.publicHandle.GetSubstring(m.ProductName,16,"...")
            </h3>
            <a href='Productdetail.aspx?id=<%# Eval("Id") %>'>
                <img src="Admin/Upfile/@m.ProductPic" title="@m.ProductName" alt="@m.ProductName" style="width:200px; height:150px;" />
            </a>
            <p class="product_price"><s>市场价：￥ @m.MarketPrice</s></p>
            <p class="product_price">本网站价：￥ @m.WebsitePrice</p>
            <a href='Shoppingcart.aspx?ProductId=@m.ID&num=1' class="addtocart"></a>
            <a href='Productdetail.aspx?id=@m.ID' class="detail"></a>
        </div>
    }



    <div class="cleaner"></div>
</div>
<div id="trRecord" style="float:left; margin-left:80px; margin-top:10px">
    <nobr>
        @Html.Partial("~/Views/Shared/BasePage.cshtml", ViewData["pagemodel"])
    </nobr>
</div>