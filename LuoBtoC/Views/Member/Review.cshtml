@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model SqlModel.MemberModel.ReviewModel

<link href="../css/templatemo_style.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="../css/ddsmoothmenu.css" />



<div id="content" class="float_r">
    <h5 style="text-align:left">会员中心 -》我的评论</h5>
    <table width="680px" cellspacing="0" cellpadding="5">
        <tr bgcolor="#ddd">
            <th width="100" align="left" nowrap="nowrap" style="border-right:1px #ccc solid;">商品名称</th>
            <th align="left" nowrap="nowrap" style="border-right:1px #ccc solid;">评论内容</th>
            <th width="120" align="left" nowrap="nowrap" style="border-right:1px #ccc solid;">回复内容</th>
            <th width="120" align="left" nowrap="nowrap" style="border-right:1px #ccc solid;">评论时间</th>
            <th width="50" align="left" nowrap="nowrap">操作</th>

        </tr>
        @foreach (var m in Model.RevieList)
        {
            <tr>
                <td align="left" style="border-bottom:1px #ccc solid; border-right:1px #ccc solid;">
                    @m.ProductName
                </td>
                <td align="left" style="border-bottom:1px #ccc solid; border-right:1px #ccc solid;">
                    @Collections.publicHandle.GetSubstring(m.ReviewContent,16,"...")
                </td>
                <td align="left" style="border-bottom:1px #ccc solid; border-right:1px #ccc solid;">
                    @Collections.publicHandle.GetSubstring(m.ReplyContent, 16, "...")
                </td>
                <td align="left" style="border-bottom:1px #ccc solid; border-right:1px #ccc solid;">
                    @DateTime.Parse(m.ReviewDate.ToString()).ToString("yyyy-MM-dd hh:mm:ss")
                </td>
                <td align="left" style="border-bottom:1px #ccc solid;">
                    @Html.ActionLink("删除", "RevDelete", "Member", new {style="cursor:hand", RevID = m.ID }, new { onclick = "return confirm('您确实要删除吗！')" })
                 </td>
            </tr>
        }
        @Html.Partial("~/Views/Shared/BasePage.cshtml", ViewData["pagemodel"])
    </table>
</div>